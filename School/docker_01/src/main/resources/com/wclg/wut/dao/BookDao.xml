<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wclg.wut.dao.BookDao">
        <!--id ="接口中的方法名"parameterType="传入的参数类型"
    　　resultType = "返回实体类对象，使用包.类名"-->
        <select id="getNameById" resultType="java.lang.String">
                select bookname from book where id=#{id};
        </select>
        <select id="getBookById" resultType="org.wclg.wut.pojo.Book">
                select * from book where id=#{id};
        </select>
        <select id="getBookAll" resultType="org.wclg.wut.pojo.Book">
                select * from book;
        </select>
</mapper>


