<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.wclg.wut.dao.UserDao">


    <select id="getUserByUsername" resultType="org.wclg.wut.pojo.User">
        select * from user where username=#{username}
    </select>
    <select id="getUserById" resultType="org.wclg.wut.pojo.User">
        select * from user where id=#{id}
    </select>
    <select id="getUserAll" resultType="org.wclg.wut.pojo.User">
        select * from user
    </select>
    <insert id="addUser"  parameterType="org.wclg.wut.pojo.User">
        insert into user (username,password) values (#{username},#{password})
    </insert>
</mapper>


