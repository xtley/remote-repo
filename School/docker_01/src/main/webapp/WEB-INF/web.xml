    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <!--
            / 表示当前servlet映射除jsp之外的所有请求（包含静态配置）
            *.do 表示.do结尾的请求路径才能被SpringMVC处理（老项目会出现）
            /* 表示当前servlet映射所有请求（包含静态资源，jsp），不应该使用配置DispatcherServlet
        -->
<!--        这个控制器管理的路径会交给控制器-->
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring-service.xml</param-value>
    </context-param>

    <!-- 乱码处理过滤器，由SpringMVC提供-->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CommonsRequestLoggingFilter</filter-class>
        <init-param>
            <!-- name固定不变，value值根据需要设置-->
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <!-- 所有请求都设置utf-8编码-->
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>

